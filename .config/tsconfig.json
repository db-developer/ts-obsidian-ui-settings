{
  "compilerOptions": {
    "baseUrl": "../",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2022",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "../src",
    "types": [ 
      "node",
      "obsidian",
      "vitest/globals"
    ],
    "lib": [
      "DOM",
      "ES2022"
    ]
  },
  "include": [
    "../src/lib/**/*.ts",
    "../src/test/**/*.ts"
  ]
}
